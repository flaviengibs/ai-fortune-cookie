{
  "manifest_version": 3,
  "name": "AI Fortune Cookie",
  "version": "1.0",
  "description": "Get an AI-generated fortune every time you open a new tab!",
  "permissions": ["storage"],
  "host_permissions": ["https://api.openai.com/"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "apple.png"
    }
  }
}
