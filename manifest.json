{
    "manifest_version": 3,
    "name": "Dark Mode Auto",
    "version": "1.0",
    "description": "Automatically enables dark mode after 7 PM and allows manual control.",
    "permissions": ["storage", "alarms", "scripting", "tabs"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "apple.png"
        }
    },
    "host_permissions": ["<all_urls>"]
}
